{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "downlevelIteration": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [".cache", "dist", "node_modules"],
    "include": ["src"]
}
